@model User
<div class="container">
    <div class="row" style="margin: 30px">
        <h1>Welcome to the Dojo Activity Center</h1>
    </div>
    <div class="row" style="margin-bottom: 20px">
        <h3>Login</h3>
    </div>
    <div class="row" style="margin-bottom: 20px">
        <div class="col">
            <div class="row">
                <form asp-action="Login" asp-controller="Home" method="post">
                <span asp-validation-for="Email" style="color: red;"></span><br>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="Email">
                    </div>   
                </div>
                <span asp-validation-for="Password" style="color: red;"></span><br>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="Password">
                    </div>   
                </div>
                <div class="row" style="justify-content: flex-end;">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
                </form>
            </div>  
        </div>
    </div>
    <div class="row" style="margin-bottom: 10px">
        <h3>Registration</h3>
    </div>
    <form asp-action="Register" asp-controller="Home" method="post">
        <div class="row" style="margin-top: 25px">
            <div class="col">
                <span asp-validation-for="FirstName" style="color: red;"></span><br>
                <div class="form-group row">
                    <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="FirstName">
                    </div>
                </div>
                <span asp-validation-for="LastName" style="color: red;"></span><br>
                <div class="form-group row">
                    <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="LastName">
                    </div>
                </div>
                <span asp-validation-for="Email" style="color: red;"></span><br>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="Email">
                    </div>
                </div>
            </div>
            <div class="col">
                <span asp-validation-for="Password" style="color: red;"></span><br>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="Password">
                    </div>
                </div>
                <span asp-validation-for="Confirm" style="color: red;"></span><br>
                <div class="form-group row">
                    <label asp-for="Confirm" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Confirm">
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="justify-content: flex-end;">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
    </div>
</div>
